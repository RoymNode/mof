{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "SqlConnection": "Server=ROY-DESKTOP;Database=ExamDB;User Id=apiuser;Password=apiuser;TrustServerCertificate=True"
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "file": {
        "type": "File",
        "layout": "${longdate} ${logger} ${message}${exception:format=ToString}",
        "fileName": "${basedir}/Log/${date:format=yyyyMMdd}.txt",
        "archiveFileName": "${basedir}/Log/{#}.txt",
        "archiveDateFormat": "yyyy-MM-dd HH_mm_ss",
        "archiveNumbering": "Date",
        "archiveEvery": "Month",
        "maxArchiveFiles": 6
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "file"
      }
    ]
  },
  "AllowedHosts": "*"
}
